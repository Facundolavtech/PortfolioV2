---
import Linkedin from "../components/Icons/Linkedin.astro";
import Github from "../components/Icons/Github.astro";
import Medium from "../components/Icons/Medium.astro";
import { SocialRoutes } from "../constants";
import Location from "../components/Icons/Location.astro";
import Email from "../components/Icons/Email.astro";
import Image from "astro/components/Image.astro";
import heroImage from "../images/hero-image.jpg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Facundo Lavagnino - Frontend & Blockchain Engineer</title>
  </head>
  <body>
    <header class="w-100 bg-primary py-16">
      <section
        class="w-100 m-auto max-w-[1280px] flex flex-col md:flex-row items-start items-center justify-between gap-12 px-8 md:px-0"
      >
        <section class="flex flex-col items-start gap-12">
          <section class="flex flex-col items-start gap-8">
            <h1 class="font-bold text-white text-5xl text-center md:text-left">
              Facundo Lavagnino <br /><span
                class="text-gray-300 text-2xl font-medium"
                >Frontend & Blockchain Engineer</span
              >
            </h1>
            <div class="m-auto md:m-0 flex flex-row gap-4">
              <a
                class="w-8 h-8 bg-white p-1 rounded-lg flex justify-center items-center hover:bg-gray-300"
                href={SocialRoutes.LINKEDIN}
                target="_blank"><Linkedin /></a
              >
              <a
                class="w-8 h-8 bg-white p-1 rounded-lg flex justify-center items-center hover:bg-gray-300"
                href={SocialRoutes.GITHUB}
                target="_blank"><Github /></a
              >
              <a
                class="w-8 h-8 bg-white p-1 rounded-lg flex justify-center items-center hover:bg-gray-300"
                href={SocialRoutes.MEDIUM}
                target="_blank"><Medium /></a
              >
            </div>
            <section class="flex flex-col gap-4 items-start">
              <div class="flex flex-row items-center m-auto md:m-0 gap-3">
                <Location width="18px" height="18px" fill="rgb(239 68 68)" />
                <p class="text-gray-300 font-semibold text-md">
                  Buenos Aires, Argentina
                </p>
              </div>
              <div class="flex flex-row items-center m-auto md:m-0 gap-3">
                <Email width="18px" height="18px" fill="rgb(239 68 68)" />
                <p class="text-gray-300 font-semibold text-md">
                  flavagnino8@gmail.com
                </p>
              </div>
            </section>
          </section>
          <button
            onclick="document.getElementById('resume-link').click()"
            class="rounded-lg py-3 px-4 bg-white flex justify-center items-center text-red-500 font-semibold hover:bg-gray-200 m-auto md:m-0"
            >Download Resume</button
          >
          <a id="resume-link" href="/favicon.svg" download hidden></a>
        </section>
        <Image
          src={heroImage}
          alt="Monkey hero image"
          width={400}
          height={400}
          class="rounded-lg hidden md:block"
        />
      </section>
    </header>
  </body>
</html>
